	<body>
	
	<h1>Edit Post</h1>
	
	<%= form_for @post, :html => {:multipart => true} do |f| %>
		<% if@post.errors.any? %>
		<h2> Errors: </h2>
		<ul>
			<% @post.errors.full_messages.each do |message| %>
				<li> <%= message %> </li>
			<% end %>
		</ul>
		<% end %>
		<p>
			<%= f.label :title %> <br/>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.file_field :image, class: "addImage", accept: "image/*", value: ":image" %><br/>
		</p>
		<p>
			<%= f.label :remote_image_url, "or image URL" %><br/>
			<%= f.text_field :remote_image_url %><br/>
		</p>
		<p>
			<%= f.label :content %><br/>
			<%= f.text_area :content, cols: "30", rows: "20", maxlength: "500", id: "field" %>
		</p>
		<p id="charNum">
		</p>
		<p>
			<%= f.submit "Update Post" %>
		</p>
	<% end %>
	
	</body>
	<small>
				Updated at: <%= @post.updated_at.localtime %> 
	</small>

